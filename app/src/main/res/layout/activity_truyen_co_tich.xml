<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TruyenCoTichActivity">

    <!--    Toolbar-->
    <RelativeLayout
        android:id="@+id/toolbarTCT"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#FA5C2A">

        <!--        Back button-->
        <ImageButton
            android:id="@+id/imgbuttonBackTCT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:background="#FA5c2a"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:src="@drawable/ic_back_black"
            tools:ignore="SpeakableTextPresentCheck" />
        <!--        Title-->
        <TextView
            android:id="@+id/titleTCT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Truyện cổ tích"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <!--    Search-->
    <EditText
        android:id="@+id/edtsearchTCT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarTCT"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:drawableStart="@drawable/ic_search"
        android:drawableLeft="@drawable/ic_back_black"
        android:drawablePadding="10dp"
        android:hint="Tìm kiếm"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <!--    list book-->
    <ListView
        android:id="@+id/dstruyenTCT"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/edtsearchTCT"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        tools:listitem="@layout/truyen_item" />


</RelativeLayout>